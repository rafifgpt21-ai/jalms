@startuml
title Manage Subject Sequence Diagram
autonumber

actor "Admin" as Admin
participant "Web/UI" as UI
participant "Server Action" as Action
participant "Prisma ORM" as Prisma
database "Database" as DB

' View Subjects Flow
Admin -> UI: View Subjects List
activate UI
UI -> Action: getSubjects()
activate Action
Action -> Prisma: findMany()
activate Prisma
Prisma -> DB: SELECT * FROM Subject...
activate DB
DB --> Prisma: Subject[]
deactivate DB
Prisma --> Action: Subject[]
deactivate Prisma
Action --> UI: Subject[]
deactivate Action
UI --> Admin: Display List of Subjects
deactivate UI

' User Action Choices
alt Create Subject
    Admin -> UI: Click "Add Subject"
    activate UI
    UI --> Admin: Display Create Form
    deactivate UI

    Admin -> UI: Fill Details & Submit
    activate UI
    note right of Admin: Name, Code, Description

    UI -> Action: createSubject(data)
    activate Action
    Action -> Action: Validate Data
    activate Action
    deactivate Action

    opt Validation Pass
        Action -> Prisma: create({ data })
        activate Prisma
        Prisma -> DB: INSERT INTO Subject...
        activate DB
        DB --> Prisma: Created Subject
        deactivate DB
        Prisma --> Action: Subject Object
        deactivate Prisma
        Action --> UI: Success Response
        UI --> Admin: Show Success & Refresh List
    else Validation Fail
        Action --> UI: Error Response
        UI --> Admin: Show Error Message
    end
    deactivate Action
    deactivate UI

else Edit Subject
    Admin -> UI: Click "Edit" on Subject
    activate UI
    UI -> Action: getSubject(id)
    activate Action
    Action -> Prisma: findUnique({ where: { id } })
    activate Prisma
    Prisma -> DB: SELECT * FROM Subject...
    activate DB
    DB --> Prisma: Subject Data
    deactivate DB
    Prisma --> Action: Subject Data
    deactivate Prisma
    Action --> UI: Subject Data
    deactivate Action
    UI --> Admin: Display Edit Form with Data
    deactivate UI

    Admin -> UI: Update Details & Submit
    activate UI
    UI -> Action: updateSubject(id, data)
    activate Action
    Action -> Action: Validate Data
    activate Action
    deactivate Action

    opt Validation Pass
        Action -> Prisma: update({ where: { id }, data })
        activate Prisma
        Prisma -> DB: UPDATE Subject...
        activate DB
        DB --> Prisma: Updated Subject
        deactivate DB
        Prisma --> Action: Subject Object
        deactivate Prisma
        Action --> UI: Success Response
        UI --> Admin: Show Success & Refresh List
    else Validation Fail
        Action --> UI: Error Response
        UI --> Admin: Show Error Message
    end
    deactivate Action
    deactivate UI

else Delete Subject
    Admin -> UI: Click "Delete" on Subject
    activate UI
    UI --> Admin: Confirm Deletion?
    deactivate UI
    
    Admin -> UI: Confirm Yes
    activate UI
    UI -> Action: deleteSubject(id)
    activate Action
    Action -> Prisma: delete({ where: { id } })
    activate Prisma
    Prisma -> DB: DELETE FROM Subject...
    activate DB
    DB --> Prisma: Success
    deactivate DB
    Prisma --> Action: Success
    deactivate Prisma
    Action --> UI: Success Response
    deactivate Action
    UI --> Admin: Show Success & Refresh List
    deactivate UI
end

@enduml
