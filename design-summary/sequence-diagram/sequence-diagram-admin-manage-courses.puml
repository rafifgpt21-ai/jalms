@startuml
title Manage Courses Sequence Diagram
autonumber

actor "Admin" as Admin
participant "Web Client" as UI
participant "Server Action" as Action
participant "Prisma ORM" as Prisma
database "Database" as DB

' View Courses Flow
Admin -> UI: View Courses List
activate UI
UI -> Action: getCourses()
activate Action
Action -> Prisma: findMany()
activate Prisma
Prisma -> DB: SELECT * FROM Course...
activate DB
DB --> Prisma: Course[]
deactivate DB
Prisma --> Action: Course[]
deactivate Prisma
Action --> UI: Course[]
deactivate Action
UI --> Admin: Display List of Courses
deactivate UI

' User Action Choices
alt Create Course
    Admin -> UI: Click "Add Course"
    activate UI
    UI --> Admin: Display Create Form
    deactivate UI

    Admin -> UI: Fill Details & Submit
    activate UI
    note right of Admin: Title, Department, etc.

    UI -> Action: createCourse(data)
    activate Action
    Action -> Action: Validate Data
    activate Action
    deactivate Action

    opt Validation Pass
        Action -> Prisma: create({ data })
        activate Prisma
        Prisma -> DB: INSERT INTO Course...
        activate DB
        DB --> Prisma: Created Course
        deactivate DB
        Prisma --> Action: Course Object
        deactivate Prisma
        Action --> UI: Success Response
        UI --> Admin: Show Success & Refresh List
    else Validation Fail
        Action --> UI: Error Response
        UI --> Admin: Show Error Message
    end
    deactivate Action
    deactivate UI

else Edit Course
    Admin -> UI: Click "Edit" on Course
    activate UI
    UI -> Action: getCourse(id)
    activate Action
    Action -> Prisma: findUnique({ where: { id } })
    activate Prisma
    Prisma -> DB: SELECT * FROM Course...
    activate DB
    DB --> Prisma: Course Data
    deactivate DB
    Prisma --> Action: Course Data
    deactivate Prisma
    Action --> UI: Course Data
    deactivate Action
    UI --> Admin: Display Edit Form with Data
    deactivate UI

    Admin -> UI: Update Details & Submit
    activate UI
    UI -> Action: updateCourse(id, data)
    activate Action
    Action -> Action: Validate Data
    activate Action
    deactivate Action

    opt Validation Pass
        Action -> Prisma: update({ where: { id }, data })
        activate Prisma
        Prisma -> DB: UPDATE Course...
        activate DB
        DB --> Prisma: Updated Course
        deactivate DB
        Prisma --> Action: Course Object
        deactivate Prisma
        Action --> UI: Success Response
        UI --> Admin: Show Success & Refresh List
    else Validation Fail
        Action --> UI: Error Response
        UI --> Admin: Show Error Message
    end
    deactivate Action
    deactivate UI

else Delete Course
    Admin -> UI: Click "Delete" on Course
    activate UI
    UI --> Admin: Confirm Deletion?
    deactivate UI
    
    Admin -> UI: Confirm Yes
    activate UI
    UI -> Action: deleteCourse(id)
    activate Action
    Action -> Prisma: delete({ where: { id } })
    activate Prisma
    Prisma -> DB: DELETE FROM Course...
    activate DB
    DB --> Prisma: Success
    deactivate DB
    Prisma --> Action: Success
    deactivate Prisma
    Action --> UI: Success Response
    deactivate Action
    UI --> Admin: Show Success & Refresh List
    deactivate UI
end

@enduml
