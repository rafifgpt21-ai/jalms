@startuml
title Manage Users Sequence Diagram
autonumber

actor "Admin" as Admin
participant "Web Client" as UI
participant "Server Action" as Action
participant "Prisma ORM" as Prisma
database "Database" as DB

' View Users Flow
Admin -> UI: View Users List
activate UI
UI -> Action: getUsers()
activate Action
Action -> Prisma: findMany()
activate Prisma
Prisma -> DB: SELECT * FROM User...
activate DB
DB --> Prisma: User[]
deactivate DB
Prisma --> Action: User[]
deactivate Prisma
Action --> UI: User[]
deactivate Action
UI --> Admin: Display List of Users
deactivate UI

' User Action Choices
alt Create User
    Admin -> UI: Click "Add User"
    activate UI
    UI --> Admin: Display Create Form
    deactivate UI

    Admin -> UI: Fill Details & Submit
    activate UI
    note right of Admin: Name, Email, Role, etc.

    UI -> Action: createUser(data)
    activate Action
    Action -> Action: Validate Data
    activate Action
    deactivate Action

    opt Validation Pass
        Action -> Prisma: create({ data })
        activate Prisma
        Prisma -> DB: INSERT INTO User...
        activate DB
        DB --> Prisma: Created User
        deactivate DB
        Prisma --> Action: User Object
        deactivate Prisma
        Action --> UI: Success Response
        UI --> Admin: Show Success & Refresh List
    else Validation Fail
        Action --> UI: Error Response
        UI --> Admin: Show Error Message
    end
    deactivate Action
    deactivate UI

else Edit User
    Admin -> UI: Click "Edit" on User
    activate UI
    UI -> Action: getUser(id)
    activate Action
    Action -> Prisma: findUnique({ where: { id } })
    activate Prisma
    Prisma -> DB: SELECT * FROM User...
    activate DB
    DB --> Prisma: User Data
    deactivate DB
    Prisma --> Action: User Data
    deactivate Prisma
    Action --> UI: User Data
    deactivate Action
    UI --> Admin: Display Edit Form with Data
    deactivate UI

    Admin -> UI: Update Details & Submit
    activate UI
    UI -> Action: updateUser(id, data)
    activate Action
    Action -> Action: Validate Data
    activate Action
    deactivate Action

    opt Validation Pass
        Action -> Prisma: update({ where: { id }, data })
        activate Prisma
        Prisma -> DB: UPDATE User...
        activate DB
        DB --> Prisma: Updated User
        deactivate DB
        Prisma --> Action: User Object
        deactivate Prisma
        Action --> UI: Success Response
        UI --> Admin: Show Success & Refresh List
    else Validation Fail
        Action --> UI: Error Response
        UI --> Admin: Show Error Message
    end
    deactivate Action
    deactivate UI

else Delete User
    Admin -> UI: Click "Delete" on User
    activate UI
    UI --> Admin: Confirm Deletion?
    deactivate UI
    
    Admin -> UI: Confirm Yes
    activate UI
    UI -> Action: deleteUser(id)
    activate Action
    Action -> Prisma: delete({ where: { id } })
    activate Prisma
    Prisma -> DB: DELETE FROM User...
    activate DB
    DB --> Prisma: Success
    deactivate DB
    Prisma --> Action: Success
    deactivate Prisma
    Action --> UI: Success Response
    deactivate Action
    UI --> Admin: Show Success & Refresh List
    deactivate UI
end

@enduml
