@startuml
title Manage Schedule Sequence Diagram
autonumber

actor "Admin" as Admin
participant "Web Client" as UI
participant "Server Action" as Action
participant "Prisma ORM" as Prisma
database "Database" as DB

' View Schedule Flow
Admin -> UI: View Schedule Grid
activate UI
UI -> Action: getSchedule()
activate Action
Action -> Prisma: findMany()
activate Prisma
Prisma -> DB: SELECT * FROM Schedule...
activate DB
DB --> Prisma: Schedule[]
deactivate DB
Prisma --> Action: Schedule[]
deactivate Prisma
Action --> UI: Schedule[]
deactivate Action
UI --> Admin: Display Schedule Grid
deactivate UI

' User Action Choices
alt Add Schedule Entry
    Admin -> UI: Click "Add Entry" (Cell)
    activate UI
    UI --> Admin: Display Add Form
    deactivate UI

    Admin -> UI: Fill Details & Submit
    activate UI
    note right of Admin: Subject, Time, Class, Teacher

    UI -> Action: createScheduleEntry(data)
    activate Action
    Action -> Action: Validate Data & Conflicts
    activate Action
    deactivate Action

    opt Validation Pass
        Action -> Prisma: create({ data })
        activate Prisma
        Prisma -> DB: INSERT INTO Schedule...
        activate DB
        DB --> Prisma: Created Entry
        deactivate DB
        Prisma --> Action: Entry Object
        deactivate Prisma
        Action --> UI: Success Response
        UI --> Admin: Show Success & Refresh Grid
    else Validation Fail
        Action --> UI: Error Response
        UI --> Admin: Show Error Message
    end
    deactivate Action
    deactivate UI

else Edit Schedule Entry
    Admin -> UI: Click "Edit" on Entry
    activate UI
    UI -> Action: getScheduleEntry(id)
    activate Action
    Action -> Prisma: findUnique({ where: { id } })
    activate Prisma
    Prisma -> DB: SELECT * FROM Schedule...
    activate DB
    DB --> Prisma: Entry Data
    deactivate DB
    Prisma --> Action: Entry Data
    deactivate Prisma
    Action --> UI: Entry Data
    deactivate Action
    UI --> Admin: Display Edit Form with Data
    deactivate UI

    Admin -> UI: Update Details & Submit
    activate UI
    UI -> Action: updateScheduleEntry(id, data)
    activate Action
    Action -> Action: Validate Data & Conflicts
    activate Action
    deactivate Action

    opt Validation Pass
        Action -> Prisma: update({ where: { id }, data })
        activate Prisma
        Prisma -> DB: UPDATE Schedule...
        activate DB
        DB --> Prisma: Updated Entry
        deactivate DB
        Prisma --> Action: Entry Object
        deactivate Prisma
        Action --> UI: Success Response
        UI --> Admin: Show Success & Refresh Grid
    else Validation Fail
        Action --> UI: Error Response
        UI --> Admin: Show Error Message
    end
    deactivate Action
    deactivate UI

else Delete Schedule Entry
    Admin -> UI: Click "Delete" on Entry
    activate UI
    UI --> Admin: Confirm Deletion?
    deactivate UI
    
    Admin -> UI: Confirm Yes
    activate UI
    UI -> Action: deleteScheduleEntry(id)
    activate Action
    Action -> Prisma: delete({ where: { id } })
    activate Prisma
    Prisma -> DB: DELETE FROM Schedule...
    activate DB
    DB --> Prisma: Success
    deactivate DB
    Prisma --> Action: Success
    deactivate Prisma
    Action --> UI: Success Response
    deactivate Action
    UI --> Admin: Show Success & Refresh Grid
    deactivate UI
end

@enduml
