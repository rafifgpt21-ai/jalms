@startuml
title Manage Courses Activity Diagram
|Admin|
start
:View Courses List;
|System|
:Display Course List;
|Admin|
if (Action?) then (Create Course)
    :Click "Add Course";
    |System|
    :Display Add Form;
    |Admin|
    :Fill Course Details;
    :Submit Form;
    |System|
    if (Validation?) then (Valid)
        :Create Course Record;
        :Show Success Message;
    else (Invalid)
        :Show Error Message;
        stop
    endif
else (Enroll Students)
    :Select Course;
endif

|Admin|
:Click "Enroll Students";
|System|
:Display Enrollment Interface;
|Admin|
:Select Student(s) or Class;
:Confirm Enrollment;
|System|
:Create Enrollment Records;
:Show Success Message;

stop
@enduml
